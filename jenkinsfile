pipeline {
  environment {
        // registry = "loiss/loissp"
        // registryCredential = 'dockerhub'
        dockerImage = ''
        loispwd=credentials("dbpwd")
        DOCKERHUB_CREDENTIALS=credentials('dockerhub')
  }
   agent any
   stages {
    //  stage('Clone Git repo') {
    //     steps {
    //       git branch: 'main',
    //       url: 'https://github.com/loiss-g/loistries_DnD-character-Gen.git'
    //     }
    // }
    stage ('Build') {
       steps {
           sh 'pwd'
           sh 'docker-compose up -d'
       }
    }
    stage ('push images to dockerhub') {
       steps{
           sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
           sh 'docker push loiss/loissp:backend'
           sh 'docker push loiss/loissp:serviceone'
           sh 'docker push loiss/loissp:servicetwo'
           sh 'docker push loiss/loissp:frontend'
       }
    }
    stage ('Test') {
        steps {
            withPythonEnv('python3'){
                sh 'pip install pytest'
            sh 'pytest ./frontend/tests/test_front_end_.py'
                }
            }
        }
    }
   }
}